@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to WorkAxis</h1>
    <p class="lead">Everything revolves around people</p>

    @if (User.Identity?.IsAuthenticated != true)
    {
            <div class="mt-5">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right"></i> Login to Continue
                </a>
            </div>
    }
</div>
