@using Microsoft.AspNetCore.Identity
@inject SignInManager<HRMS.Infrastructure.Identity.ApplicationUser> SignInManager
@inject UserManager<HRMS.Infrastructure.Identity.ApplicationUser> UserManager

<div class="sidebar" id="sidebar">
    <div class="sidebar-header py-4">
        <a asp-controller="Home" asp-action="Index" class="sidebar-brand d-flex align-items-center">
            <div class="bg-white rounded-circle p-1 me-2 d-flex align-items-center justify-content-center shadow-sm"
                style="width: 40px; height: 40px;">
                <img src="~/images/logo-icon.png" alt="WorkAxis Icon" height="28">
            </div>
            <span class="fs-4 fw-bold text-white">WorkAxis</span>
        </a>
    </div>

    <div class="sidebar-content">
        <ul class="sidebar-nav">
            <li class="sidebar-header-label">Main</li>

            <li class="sidebar-item">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                    class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
                </a>
            </li>

            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin") || User.IsInRole("HRAdmin"))
            {
                <li class="sidebar-header-label">Workforce</li>

                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="Employee" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employee" ? "active" : "")">
                        <i class="bi bi-person-badge"></i> <span>Employees</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="OfferLetter" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "OfferLetter" ? "active" : "")">
                        <i class="bi bi-file-earmark-text"></i> <span>Offer Letters</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="OfferLetterTemplate" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "OfferLetterTemplate" ? "active" : "")">
                        <i class="bi bi-file-earmark-richtext"></i> <span>Offer Templates</span>
                    </a>
                </li>

                <li class="sidebar-header-label">Payroll & Finance</li>

                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="Payroll" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Payroll" ? "active" : "")">
                        <i class="bi bi-cash-stack"></i> <span>Payroll</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="Salary" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Salary" ? "active" : "")">
                        <i class="bi bi-currency-dollar"></i> <span>Salary Structures</span>
                    </a>
                </li>

                <li class="sidebar-header-label">Leave Management</li>

                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="Leave" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Leave" ? "active" : "")">
                        <i class="bi bi-calendar-check"></i> <span>Leave Requests</span>
                    </a>
                </li>

                <li class="sidebar-header-label">Master Data</li>

                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="Department" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Department" ? "active" : "")">
                        <i class="bi bi-building"></i> <span>Departments</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="Designation" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Designation" ? "active" : "")">
                        <i class="bi bi-briefcase"></i> <span>Designations</span>
                    </a>
                </li>
            }

            @if (User.IsInRole("Employee"))
            {
                <li class="sidebar-header-label">Self Service</li>

                <li class="sidebar-item">
                    <a asp-area="Employee" asp-controller="Dashboard" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Area"]?.ToString() == "Employee" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2"></i> <span>Overview</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Employee" asp-controller="Profile" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Profile" ? "active" : "")">
                        <i class="bi bi-person-circle"></i> <span>My Profile</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Employee" asp-controller="MyPayslips" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MyPayslips" ? "active" : "")">
                        <i class="bi bi-receipt"></i> <span>My Payslips</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Employee" asp-controller="MyLeaves" asp-action="Index"
                        class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "MyLeaves" ? "active" : "")">
                        <i class="bi bi-calendar2-week"></i> <span>My Leaves</span>
                    </a>
                </li>
            }
        </ul>
    </div>

    <div class="sidebar-footer">
        <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout"
            asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-outline-light w-100">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </form>
    </div>
</div>
