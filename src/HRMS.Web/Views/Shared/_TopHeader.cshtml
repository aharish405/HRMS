@using Microsoft.AspNetCore.Identity
@inject UserManager<HRMS.Infrastructure.Identity.ApplicationUser> UserManager
@inject SignInManager<HRMS.Infrastructure.Identity.ApplicationUser> SignInManager

<nav class="navbar navbar-expand navbar-light bg-white shadow-sm topbar mb-4 static-top">
    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
        <i class="bi bi-list"></i>
    </button>

    <div class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100">
        <h5 class="mb-0 text-gray-800">
            @ViewData["Title"]
        </h5>
    </div>

    <ul class="navbar-nav ms-auto">
        <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity?.Name</span>
                <img class="img-profile rounded-circle"
                    src="https://ui-avatars.com/api/?name=@User.Identity?.Name&background=0D6EFD&color=fff"
                    style="width: 32px; height: 32px;">
            </a>
            <div class="dropdown-menu dropdown-menu-end shadow animated--grow-in" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="#">
                    <i class="bi bi-person me-2 text-gray-400"></i>
                    Profile
                </a>
                <a class="dropdown-item" href="#">
                    <i class="bi bi-gear me-2 text-gray-400"></i>
                    Settings
                </a>
                <div class="dropdown-divider"></div>
                <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item">
                        <i class="bi bi-box-arrow-right me-2 text-gray-400"></i>
                        Logout
                    </button>
                </form>
            </div>
        </li>
    </ul>
</nav>
