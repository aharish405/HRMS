@model HRMS.Application.DTOs.Employee.EmployeeDto
@{
    ViewData["Title"] = "Employee Details";
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2><i class="bi bi-person-badge"></i> Employee Details</h2>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-person"></i> Personal Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Employee Code:</strong></div>
                    <div class="col-md-8">@Model.EmployeeCode</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Full Name:</strong></div>
                    <div class="col-md-8">@Model.FullName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Email:</strong></div>
                    <div class="col-md-8"><a href="mailto:@Model.Email">@Model.Email</a></div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Phone))
                {
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Phone:</strong></div>
                        <div class="col-md-8">@Model.Phone</div>
                    </div>
                }
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Date of Birth:</strong></div>
                    <div class="col-md-8">@Model.DateOfBirth.ToString("dd MMM yyyy")</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Gender:</strong></div>
                    <div class="col-md-8">@Model.Gender</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Address:</strong></div>
                        <div class="col-md-8">@Model.Address</div>
                    </div>
                }
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-briefcase"></i> Employment Details</h5>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Department:</strong></div>
                    <div class="col-md-8">@Model.DepartmentName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Designation:</strong></div>
                    <div class="col-md-8">@Model.DesignationTitle</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.ReportingManagerName))
                {
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Reporting Manager:</strong></div>
                        <div class="col-md-8">@Model.ReportingManagerName</div>
                    </div>
                }
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Joining Date:</strong></div>
                    <div class="col-md-8">@Model.JoiningDate.ToString("dd MMM yyyy")</div>
                </div>
                @if (Model.RelievingDate.HasValue)
                {
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Relieving Date:</strong></div>
                        <div class="col-md-8">@Model.RelievingDate.Value.ToString("dd MMM yyyy")</div>
                    </div>
                }
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Status:</strong></div>
                    <div class="col-md-8">
                        @if (Model.Status == "Active")
                        {
                            <span class="badge bg-success">@Model.Status</span>
                        }
                        else if (Model.Status == "OnNotice")
                        {
                            <span class="badge bg-warning">On Notice</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.Status</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Audit Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <small class="text-muted">Created On:</small><br />
                    <strong>@Model.CreatedOn.ToString("dd MMM yyyy HH:mm")</strong>
                </div>
                <div class="mb-2">
                    <small class="text-muted">Created By:</small><br />
                    <strong>@Model.CreatedBy</strong>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary" disabled>
                        <i class="bi bi-cash-stack"></i> Assign Salary
                    </button>
                    <button class="btn btn-outline-success" disabled>
                        <i class="bi bi-file-earmark-text"></i> Generate Offer Letter
                    </button>
                    <button class="btn btn-outline-info" disabled>
                        <i class="bi bi-calendar-check"></i> View Leave Balance
                    </button>
                </div>
                <small class="text-muted d-block mt-2">These features will be available soon</small>
            </div>
        </div>
    </div>
</div>
