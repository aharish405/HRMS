@model IEnumerable<HRMS.Application.DTOs.Employee.EmployeeDto>
@{
    ViewData["Title"] = "Employees";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="bi bi-people-fill"></i> Employees</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i> Add Employee
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search by code, name, or email..."
                    value="@ViewData["SearchTerm"]" />
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(ViewData["SearchTerm"]?.ToString()))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                }
            </div>
        </form>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td><strong>@employee.EmployeeCode</strong></td>
                                <td>@employee.FullName</td>
                                <td>@employee.Email</td>
                                <td>@employee.DepartmentName</td>
                                <td>@employee.DesignationTitle</td>
                                <td>
                                    @if (employee.Status == "Active")
                                    {
                                        <span class="badge bg-success">@employee.Status</span>
                                    }
                                    else if (employee.Status == "OnNotice")
                                    {
                                        <span class="badge bg-warning">On Notice</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@employee.Status</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-outline-info"
                                            title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-outline-primary"
                                            title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                                            data-bs-target="#deleteModal@(employee.Id)" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal@(employee.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete employee
                                                    <strong>@employee.FullName</strong>?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" asp-route-id="@employee.Id" method="post"
                                                        class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <p class="mt-2">No employees found</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-person-plus-fill"></i> Add First Employee
                </a>
            </div>
        }
    </div>
</div>
