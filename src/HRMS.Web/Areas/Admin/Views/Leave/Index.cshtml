@model IEnumerable<HRMS.Application.DTOs.Leave.LeaveRequestDto>
@{
    ViewData["Title"] = "Leave Management";
}

<div class="d-sm-flex align-items-center justify-content-end mb-4">
    <div>
        <a asp-action="Pending" class="btn btn-warning shadow-sm me-2">
            <i class="bi bi-hourglass-split"></i> Pending Approvals
        </a>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> New Leave Request
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Leave Requests</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Leave Type</th>
                            <th>Duration</th>
                            <th>Days</th>
                            <th>Reason</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@item.EmployeeName</div>
                                    <small class="text-muted">@item.EmployeeCode</small>
                                </td>
                                <td>@item.LeaveTypeName</td>
                                <td>
                                    @item.StartDate.ToString("MMM dd") - @item.EndDate.ToString("MMM dd, yyyy")
                                </td>
                                <td>@item.NumberOfDays</td>
                                <td>
                                    <span class="d-inline-block text-truncate" style="max-width: 150px;" title="@item.Reason">
                                        @item.Reason
                                    </span>
                                </td>
                                <td>
                                    @if (item.Status == "Approved")
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (item.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                    else if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (item.Status == "Cancelled")
                                    {
                                        <span class="badge bg-secondary">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white"
                                        title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (item.Status == "Pending")
                                    {
                                        <form asp-action="Cancel" method="post" class="d-inline"
                                            onsubmit="return confirm('Are you sure you want to cancel this request?');">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Cancel">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-gray-300" style="font-size: 3rem;"></i>
                <p class="mt-3 mb-0">No leave requests found.</p>
            </div>
        }
    </div>
</div>
