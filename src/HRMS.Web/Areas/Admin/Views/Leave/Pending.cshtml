@model IEnumerable<HRMS.Application.DTOs.Leave.LeaveRequestDto>
@{
    ViewData["Title"] = "Leave Requests - Pending Approval";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="bi bi-calendar-check"></i> Pending Leave Requests</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-list"></i> All Requests
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Leave Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Days</th>
                            <th>Reason</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@request.EmployeeCode</strong><br />
                                    <small>@request.EmployeeName</small>
                                </td>
                                <td>@request.LeaveTypeName</td>
                                <td>@request.StartDate.ToString("dd MMM yyyy")</td>
                                <td>@request.EndDate.ToString("dd MMM yyyy")</td>
                                <td><span class="badge bg-info">@request.NumberOfDays days</span></td>
                                <td>@request.Reason</td>
                                <td>
                                    <form asp-action="Approve" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@request.Id" />
                                        <input type="hidden" name="isApproved" value="true" />
                                        <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#rejectModal@(request.Id)" title="Reject">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>

                                    <!-- Reject Modal -->
                                    <div class="modal fade" id="rejectModal@(request.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form asp-action="Approve" method="post">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Reject Leave Request</h5>
                                                        <button type="button" class="btn-close"
                                                            data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <input type="hidden" name="id" value="@request.Id" />
                                                        <input type="hidden" name="isApproved" value="false" />
                                                        <div class="mb-3">
                                                            <label for="comments" class="form-label">Rejection Reason</label>
                                                            <textarea name="comments" class="form-control" rows="3"
                                                                required></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger">Reject Request</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <p class="mt-2">No pending leave requests</p>
            </div>
        }
    </div>
</div>
