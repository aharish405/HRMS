@model HRMS.Application.DTOs.Leave.LeaveRequestDto
@{
    ViewData["Title"] = "Leave Request Details";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Leave Request Details</h1>
    <a asp-action="Index" class="btn btn-secondary shadow-sm">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Request Information</h6>
                @if (Model.Status == "Approved")
                {
                    <span class="badge bg-success">Approved</span>
                }
                else if (Model.Status == "Rejected")
                {
                    <span class="badge bg-danger">Rejected</span>
                }
                else if (Model.Status == "Pending")
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.Status</span>
                }
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Employee Name:</div>
                    <div class="col-sm-8">@Model.EmployeeName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Employee Code:</div>
                    <div class="col-sm-8">@Model.EmployeeCode</div>
                </div>
                <hr />
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Leave Type:</div>
                    <div class="col-sm-8">@Model.LeaveTypeName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Duration:</div>
                    <div class="col-sm-8">
                        @Model.StartDate.ToString("D") - @Model.EndDate.ToString("D")
                        <br />
                        <span class="text-muted small">(@Model.NumberOfDays days)</span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Reason:</div>
                    <div class="col-sm-8">@Model.Reason</div>
                </div>

                @if (Model.Status != "Pending")
                {
                    <hr />
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Approved/Rejected By:</div>
                        <div class="col-sm-8">@Model.ApproverName</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ApprovalComments))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Comments:</div>
                            <div class="col-sm-8">@Model.ApprovalComments</div>
                        </div>
                    }
                }
            </div>
            <div class="card-footer">
                @if (Model.Status == "Pending")
                {
                    <div class="d-flex justify-content-end gap-2">
                        <form asp-action="Approve" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="isApproved" value="true" />
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Approve
                            </button>
                        </form>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                            <i class="bi bi-x-circle"></i> Reject
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Approve" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Leave Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="isApproved" value="false" />
                    <div class="mb-3">
                        <label for="comments" class="form-label">Rejection Reason</label>
                        <textarea name="comments" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Request</button>
                </div>
            </form>
        </div>
    </div>
</div>
