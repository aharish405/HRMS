@model HRMS.Application.DTOs.OfferLetter.CreateOfferLetterDto
@{
    ViewData["Title"] = "Create Offer Letter";
}

<div class="row">
    <div class="col-md-10">
        <h2><i class="bi bi-file-earmark-text"></i> Create Offer Letter</h2>
        <hr />

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="card mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Template Selection</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="TemplateId" class="form-label">Offer Letter Template</label>
                        <select asp-for="TemplateId" class="form-select" asp-items="ViewBag.Templates">
                            <option value="">-- Select Template --</option>
                        </select>
                         <span asp-validation-for="TemplateId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Candidate Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="EmployeeId" class="form-label">Link to Draft Employee (Optional)</label>
                            <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.Employees">
                                <option value="">-- Select Draft Employee --</option>
                            </select>
                            <small class="text-muted">Selecting an employee will auto-populate candidate details.</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CandidateName" class="form-label">Full Name</label>
                            <input asp-for="CandidateName" class="form-control" />
                            <span asp-validation-for="CandidateName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CandidateEmail" class="form-label">Email</label>
                            <input asp-for="CandidateEmail" type="email" class="form-control" />
                            <span asp-validation-for="CandidateEmail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CandidatePhone" class="form-label">Phone</label>
                            <input asp-for="CandidatePhone" class="form-control" />
                            <span asp-validation-for="CandidatePhone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CandidateAddress" class="form-label">Address</label>
                            <textarea asp-for="CandidateAddress" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="CandidateAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-briefcase"></i> Position Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="DepartmentId" class="form-label">Department</label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="DesignationId" class="form-label">Designation</label>
                            <select asp-for="DesignationId" class="form-select" asp-items="ViewBag.Designations">
                                <option value="">-- Select Designation --</option>
                            </select>
                            <span asp-validation-for="DesignationId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="JoiningDate" class="form-label">Joining Date</label>
                            <input asp-for="JoiningDate" type="date" class="form-control" />
                            <span asp-validation-for="JoiningDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-currency-rupee"></i> Salary Components</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="BasicSalary" class="form-label">Basic Salary (Annual)</label>
                            <input asp-for="BasicSalary" type="number" step="0.01" class="form-control salary-input" />
                            <span asp-validation-for="BasicSalary" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="HRA" class="form-label">HRA</label>
                            <input asp-for="HRA" type="number" step="0.01" class="form-control salary-input" />
                            <span asp-validation-for="HRA" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConveyanceAllowance" class="form-label">Conveyance Allowance</label>
                            <input asp-for="ConveyanceAllowance" type="number" step="0.01"
                                class="form-control salary-input" />
                            <span asp-validation-for="ConveyanceAllowance" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MedicalAllowance" class="form-label">Medical Allowance</label>
                            <input asp-for="MedicalAllowance" type="number" step="0.01"
                                class="form-control salary-input" />
                            <span asp-validation-for="MedicalAllowance" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SpecialAllowance" class="form-label">Special Allowance</label>
                            <input asp-for="SpecialAllowance" type="number" step="0.01"
                                class="form-control salary-input" />
                            <span asp-validation-for="SpecialAllowance" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="OtherAllowances" class="form-label">Other Allowances</label>
                            <input asp-for="OtherAllowances" type="number" step="0.01"
                                class="form-control salary-input" />
                            <span asp-validation-for="OtherAllowances" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="alert alert-success">
                        <strong>Gross Salary: ₹<span id="grossSalary">0.00</span></strong>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-dash-circle"></i> Deductions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PF" class="form-label">PF (Provident Fund)</label>
                            <input asp-for="PF" type="number" step="0.01" class="form-control deduction-input" />
                            <span asp-validation-for="PF" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ESI" class="form-label">ESI (Employee State Insurance)</label>
                            <input asp-for="ESI" type="number" step="0.01" class="form-control deduction-input" />
                            <span asp-validation-for="ESI" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProfessionalTax" class="form-label">Professional Tax</label>
                            <input asp-for="ProfessionalTax" type="number" step="0.01"
                                class="form-control deduction-input" />
                            <span asp-validation-for="ProfessionalTax" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TDS" class="form-label">TDS (Tax Deducted at Source)</label>
                            <input asp-for="TDS" type="number" step="0.01" class="form-control deduction-input" />
                            <span asp-validation-for="TDS" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="OtherDeductions" class="form-label">Other Deductions</label>
                            <input asp-for="OtherDeductions" type="number" step="0.01"
                                class="form-control deduction-input" />
                            <span asp-validation-for="OtherDeductions" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="alert alert-danger">
                        <strong>Total Deductions: ₹<span id="totalDeductions">0.00</span></strong>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body bg-light">
                    <div class="row">
                        <div class="col-md-4">
                            <h5>Total CTC (Annual)</h5>
                            <h3 class="text-success">₹<span id="totalCTC">0.00</span></h3>
                        </div>
                        <div class="col-md-4">
                            <h5>Net Salary (Annual)</h5>
                            <h3 class="text-primary">₹<span id="netSalary">0.00</span></h3>
                        </div>
                        <div class="col-md-4">
                            <h5>Net Salary (Monthly)</h5>
                            <h3 class="text-info">₹<span id="monthlySalary">0.00</span></h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Additional Terms</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="AdditionalTerms" class="form-label">Additional Terms & Conditions
                            (Optional)</label>
                        <textarea asp-for="AdditionalTerms" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="AdditionalTerms" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle"></i> Create Offer Letter
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
            $(document).ready(function() {
                function calculateTotals() {
                    // Get allowances
                    var basic = parseFloat($('#BasicSalary').val()) || 0;
                    var hra = parseFloat($('#HRA').val()) || 0;
                    var conveyance = parseFloat($('#ConveyanceAllowance').val()) || 0;
                    var medical = parseFloat($('#MedicalAllowance').val()) || 0;
                    var special = parseFloat($('#SpecialAllowance').val()) || 0;
                    var other = parseFloat($('#OtherAllowances').val()) || 0;

                    // Get deductions
                    var pf = parseFloat($('#PF').val()) || 0;
                    var esi = parseFloat($('#ESI').val()) || 0;
                    var pt = parseFloat($('#ProfessionalTax').val()) || 0;
                    var tds = parseFloat($('#TDS').val()) || 0;
                    var otherDeductions = parseFloat($('#OtherDeductions').val()) || 0;

                    // Calculate totals
                    var grossSalary = basic + hra + conveyance + medical + special + other;
                    var totalDeductions = pf + esi + pt + tds + otherDeductions;
                    var netSalary = grossSalary - totalDeductions;
                    var monthlySalary = netSalary / 12;

                    // Update display
                    $('#grossSalary').text(grossSalary.toFixed(2));
                    $('#totalCTC').text(grossSalary.toFixed(2));
                    $('#totalDeductions').text(totalDeductions.toFixed(2));
                    $('#netSalary').text(netSalary.toFixed(2));
                    $('#monthlySalary').text(monthlySalary.toFixed(2));
                }

                $('.salary-input, .deduction-input').on('input', calculateTotals);
                calculateTotals();

                // Auto-populate candidate details
                $('#EmployeeId').change(function() {
                    var empId = $(this).val();
                    if (empId) {
                        $.get('/Admin/OfferLetter/GetEmployeeDetails/' + empId, function(data) {
                            $('#CandidateName').val(data.candidateName);
                            $('#CandidateEmail').val(data.candidateEmail);
                            $('#CandidatePhone').val(data.candidatePhone);
                            $('#CandidateAddress').val(data.candidateAddress);
                            
                            if (data.departmentId) $('#DepartmentId').val(data.departmentId);
                            if (data.designationId) $('#DesignationId').val(data.designationId);
                        }).fail(function() {
                            alert('Failed to fetch employee details.');
                        });
                    }
                });
            });
        </script>
}
