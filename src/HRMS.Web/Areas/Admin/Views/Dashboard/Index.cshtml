@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">
            <i class="bi bi-speedometer2"></i> Admin Dashboard
        </h2>
    </div>
</div>

<div class="row g-4">
    <!-- Total Employees Card -->
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Total Employees</h6>
                        <h3 class="mb-0">0</h3>
                    </div>
                    <div class="text-primary">
                        <i class="bi bi-people-fill" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-primary text-white">
                <a asp-area="Admin" asp-controller="Employee" asp-action="Index"
                    class="text-white text-decoration-none">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Active Employees Card -->
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Active Employees</h6>
                        <h3 class="mb-0">0</h3>
                    </div>
                    <div class="text-success">
                        <i class="bi bi-person-check-fill" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-success text-white">
                <small>Currently Working</small>
            </div>
        </div>
    </div>

    <!-- Pending Leaves Card -->
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Pending Leaves</h6>
                        <h3 class="mb-0">0</h3>
                    </div>
                    <div class="text-warning">
                        <i class="bi bi-calendar-check-fill" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-warning text-white">
                <a asp-area="Admin" asp-controller="Leave" asp-action="Index" class="text-white text-decoration-none">
                    Review Leaves <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Departments Card -->
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Departments</h6>
                        <h3 class="mb-0">5</h3>
                    </div>
                    <div class="text-info">
                        <i class="bi bi-building" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-info text-white">
                <a asp-area="Admin" asp-controller="Department" asp-action="Index"
                    class="text-white text-decoration-none">
                    Manage <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-activity"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-area="Admin" asp-controller="Employee" asp-action="Create"
                            class="btn btn-outline-primary w-100">
                            <i class="bi bi-person-plus-fill"></i><br />
                            Add Employee
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="Admin" asp-controller="Payroll" asp-action="Create"
                            class="btn btn-outline-success w-100">
                            <i class="bi bi-cash-stack"></i><br />
                            Process Payroll
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="Admin" asp-controller="Leave" asp-action="Index"
                            class="btn btn-outline-warning w-100">
                            <i class="bi bi-calendar-check"></i><br />
                            Approve Leaves
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="Admin" asp-controller="OfferLetter" asp-action="Create"
                            class="btn btn-outline-info w-100">
                            <i class="bi bi-file-earmark-text"></i><br />
                            Generate Offer Letter
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="Admin" asp-controller="Department" asp-action="Index"
                            class="btn btn-outline-secondary w-100">
                            <i class="bi bi-building"></i><br />
                            Master Data
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-area="Admin" asp-controller="Reports" asp-action="Index"
                            class="btn btn-outline-dark w-100">
                            <i class="bi bi-graph-up"></i><br />
                            View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-bell-fill"></i> Recent Activity</h5>
            </div>
            <div class="card-body">
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">No recent activity</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="alert alert-info">
            <h5 class="alert-heading"><i class="bi bi-info-circle-fill"></i> Welcome to WorkAxis HRMS!</h5>
            <p class="mb-0">
                The foundation is complete. Use the quick actions above to start managing your workforce.
                Employee Management, Payroll, and Leave modules are ready to be implemented.
            </p>
        </div>
    </div>
</div>
